
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>@ViewData["Title"] - Cinema</title>
    <meta charset="UTF-8">
    <meta name="description" content="EndGam Gaming Magazine Template">
    <meta name="keywords" content="endGam,gGaming, magazine, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="shortcut icon" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,500,500i,700,700i,900,900i" rel="stylesheet">


    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/Client/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Client/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Client/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/Client/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/Client/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/Client/css/animate.css" />

    <!-- Main Stylesheets -->
    <link rel="stylesheet" href="~/Client/css/style.css" />


    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section">
        <div class="header-warp">
            <div class="header-social d-flex justify-content-end">
                <p>Theo dõi :</p>
                <a href="#"><i class="fa fa-pinterest"></i></a>
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-dribbble"></i></a>
                <a href="#"><i class="fa fa-behance"></i></a>
            </div>
            <div class="header-bar-warp d-flex">
                <!-- site logo -->
                <a asp-area="" asp-page="/Cinema/Index"  class="site-logo">
                    @*<img src="./img/logo.png" alt="">*@
                    CINEMA
                </a>
                <nav class="top-nav-area w-100">
                    <div class="user-panel">
                        @*<a asp-area="" asp-controller="Cinema" asp-action="" data-toggle="modal" data-target="#modaldangnhap">Đăng nhập</a> / <a asp-area="" asp-controller="Cinema" asp-action="" data-toggle="modal" data-target="#modaldangki">Đăng ký</a>*@
                        <a asp-page="/Cinema/Login">Đăng nhập</a> / <a asp-page="/Cinema/Login">Đăng ký</a>
                    </div>
                    <!-- Menu -->
                    <ul class="main-menu primary-menu">
                        <li><a asp-area="" asp-page="/Cinema/Index">Trang chủ</a></li>
                        <li><a asp-area="" asp-page="/Cinema/Movies_playing">Phim</a></li>
                        <li><a asp-area="" asp-page="/Cinema/Member">Thành viên</a></li>
                        <li><a asp-area="" asp-page="/Cinema/Contact">Liên hệ</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <!-- Header section end -->
    <!-- Hero section -->
    <section class="hero-section overflow-hidden">
        <div class="hero-slider owl-carousel" style="height:auto;width:auto;">
            <div class="hero-item set-bg d-flex align-items-center justify-content-center text-center"
                 data-setbg="/Client/img/img_movie_poster/joker-2019-poster.jpg">
            </div>
            <div class="hero-item set-bg d-flex align-items-center justify-content-center text-center"
                 data-setbg="/Client/img/img_movie_poster/popup-avenger-endgame.jpg">
            </div>
        </div>
    </section>
    <!-- Hero section end-->
    @RenderBody()
    <!-- Newsletter section -->
    <section class="newsletter-section">
        <div class="container">
            <h2>Theo dõi bản tin của chúng tôi</h2>
            <form class="newsletter-form">
                <input type="text" placeholder="Nhập địa chỉ MAIL của bạn">
                <button class="site-btn">Theo dõi<img src="/Client/img/icons/double-arrow.png" alt="#" /></button>
            </form>
        </div>
    </section>
    <!-- Newsletter section end -->
    <!-- Footer section -->
    <footer class="footer-section">
        <div class="container">
            <div class="footer-left-pic">
                @*<img src="img/footer-left-pic.png" alt="">*@
            </div>
            <div class="footer-right-pic">
                @*<img src="img/footer-right-pic.png" alt="">*@
            </div>
            <a href="#" class="footer-logo">
                @*<img src="./img/logo.png" alt="">*@
            </a>
            <div class="footer-social d-flex justify-content-center">
                <a href="#"><i class="fa fa-pinterest"></i></a>
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-dribbble"></i></a>
                <a href="#"><i class="fa fa-behance"></i></a>
            </div>
            <div class="copyright"><a href="">Colorlib</a> 2018  All rights reserved</div>
        </div>
    </footer>
    <!-- Footer section end -->
    <!--====== Javascripts & Jquery ======-->
    <script src="~/Client/js/jquery-3.2.1.min.js"></script>
    <script src="~/Client/js/bootstrap.min.js"></script>
    <script src="~/Client/js/jquery.slicknav.min.js"></script>
    <script src="~/Client/js/owl.carousel.min.js"></script>
    <script src="~/Client/js/jquery.sticky-sidebar.min.js"></script>
    <script src="~/Client/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Client/js/main.js"></script>
    @RenderSection("Scripts", required: false)

    <!-- The Modal -->
    <div class="modal fade" id="modaldangnhap">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Đăng nhập</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Đăng nhập
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modaldangnhap">đăng nhập</button>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="modaldangki">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title-center">Đăng kí</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Đăng kí
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modaldangki">Đăng kí</button>
                </div>

            </div>
        </div>
    </div>
    <!-- End The Modal -->
</body>

</html>